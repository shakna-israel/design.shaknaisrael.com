.container  {
    width: 100%;
    margin-left:auto;
    margin-right:auto;
}

.column-25 {
    display:inline-block;
    width:23%;
}

@media screen and (max-width:350px) {
    .column-25 {
        width:100%;
    }
}

@media screen and (min-width:350px) and (max-width:800px) {
    .column-25 {
        width:46%;
    }
}

@media screen and (min-width:800px) and (max-width:900px) {
    .column-25 {
        width:40%;
    }
}

.column-50 {
    display:inline-block;
    width:46%;
}

.column-75 {
    display:inline-block;
    width:72%;
}

.column-100 {
    display:inline-block;
    width:100%;
}
